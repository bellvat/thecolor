<header class="row">
  <div class="col-6 col-sm-7 offset-1">
      <div class="box">
        <div class="transbox">
          <h3><%= @movie.moviename %> </h3>
          <h5><%= @movie.month %> <%= @movie.year %>
          </h5>
          <h6>Thoughts: <%= @movie.thoughts %></h6>

        </div>
      </div>
  </div>

  <div class="col-4 offset-1 text-left col-sm-3">
  <div class="box2">
      <b> -Collection-</b>
        <% @all.each do |u| %>
          <div class='container'>
              <span><%= link_to u.moviename, movie_path(u), class: 'collection' %></span>
          </div>
        <% end %>
    </div>
  </div>


</header>