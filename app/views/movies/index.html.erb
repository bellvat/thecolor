<header class="row">
  <div class="col-6 col-sm-7 offset-1">
    <% @movies.each do |m| %>
      <div class="box">
        <div class="transbox">
          <h3><%= m.movie %> </h3>
          <h5><%=m.month %>
          <%= m.year %>
          </h5>
          <h6>Thoughts: <%= m.thoughts %></h6>

        </div>
      </div>
    <% end %>
  </div>

  <div class="col-4 offset-1 text-left col-sm-3">
  <div class="box2">
      <b> -Collection-</b>
        <% @unique.each do |u| %>
          <div class='container'>
              <span><%= u %></span>
          </div>
        <% end %>
    </div>
  </div>


</header>

<%= will_paginate @movies, class:'apple_pagination' %>